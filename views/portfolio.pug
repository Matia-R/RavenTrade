extends layout

block content
  div(id="portfolio")
    div(id="port-info")
      div(id="port-value").port-info-box
        h1 Portfolio Value:
        h2 $#{userInfo.portfolioValue.toFixed(2)}
      div(id="port-balance").port-info-box
        h1 Current Balance:
        h2 $#{userInfo.portfolioBalance.toFixed(2)}
      div(id="funds-btn-box").port-info-box
        button(id="withdraw-btn" onclick="fetch('/portfolio/withdraw', { method: 'PATCH'}); document.location.reload();").big-btn Withdraw Funds
        button(id="deposit-btn" onclick="fetch('/portfolio/deposit', { method: 'PATCH'}); document.location.reload();").big-btn Deposit Funds
    div(id="owned-stock")
      div(id="owned-stock-title").stock-info-box
        h1 Current Portfolio
      div(id="owned-stock-box").stock-info-box
        - var n = 0
        ul(id="owned-stock-list").stock-list
          each stock in userInfo.portfolio
            li(tabindex = n++) #{stock.symbol} $#{stock.price} #{stock.numOwned}
          br
      div(id="owned-stock-btn").stock-info-box
        button(id="btn-orders" onclick="window.location.href='/orders'").big-btn Orders
        button(id="btn-browse-stocks" onclick="window.location.href='/stocks'").big-btn Browse Stocks
        button(id="btn-watchlist" onclick="window.location.href='/watchlist'").big-btn Watchlists
          


             
    