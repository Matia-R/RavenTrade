extends layout

block content
  div(id="stocks")
    h1.small-title Browse Stocks
    div(id="search-box").stock-info-box
      form(method="post" action="/stocks/filter")
        label(for="searchbox")#searchbox-label Search: 
        input(type='text' name='searchbox' placeholder='eg. XYZ')#searchbox
        input(type='submit' value='‚èé')#searchbox-submit
    div(id="stock-box").stock-info-box
      - var n = 0
      ul(id="stock-list").stock-list
        each stock in stockInfo.allStocks
          li(tabindex = n++) #{stock.symbol} $#{stock.price}
        br
        
    div(id="stock-btn").stock-info-box
      button(id="btn-view-stock").big-btn View Stock
      button(id="btn-place-order" onclick="window.location.href='/orders'").big-btn Place Order
      button(id="btn-add-watchlist" onclick="window.location.href='/watchlist'").big-btn Add to Watchlist
      button(id="btn-add-alert" onclick="window.location.href='/alerts'").big-btn Add Alert
      
    
          


             
    
      